@model SignInForm

<partial name="_ValidationScriptsPartial" />

<div class="container">
    <h1>Sign In</h1>

    <div class="card pt-4 pb-4 pr-4 pl-4">
        <form asp-controller="Developer" asp-action="SignIn" method="post">
            <div class="form-group">
                <input class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>