@model RegisterAccountForm

<partial name="_ValidationScriptsPartial" />

<div class="container">
    <h1>Register</h1>

    @if (ViewBag.EmailAlreadyExists == true)
    {
        <div class="alert alert-warning" role="alert">
          That email already exists, would you like to <a asp-controller="Developer" asp-action="SignIn">sign in</a>?
        </div>
    }

    @if (ViewBag.DatabaseError == true)
    {
        <div class="alert alert-danger" role="alert">
          Sorry about this, but something unexpected happened on our end. Please submit the form again.
        </div>
    }

    @if (ViewBag.FormError == true)
    {
        <div class="alert alert-warning" role="alert">
          Please fix the errors below.
        </div>
    }

    <div class="card pt-4 pb-4 pr-4 pl-4">
        <form asp-controller="Developer" asp-action="Register" method="post">
            <div class="form-group">
                <input class="form-control" asp-for="FirstName" placeholder="First Name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <input class="form-control" asp-for="LastName" placeholder="Last Name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
