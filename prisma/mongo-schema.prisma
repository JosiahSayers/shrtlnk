generator client {
  provider        = "prisma-client-js"
  output          = "./generated/mongo-client"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DATABASE_URL")
}

model AccountVerification {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  Email String
}

model Applications {
  id                             String            @id @map("_id")
  ApiKey                         String
  CreationDate                   DateTime          @db.Date
  CurrentSetApiVersion           Int
  DeleteReason                   String?
  DeletedByAccountId             String?
  DeletionDate                   DateTime          @db.Date
  DeveloperId                    String
  LastUsedApiVersion             Int
  Name                           String
  OriginalApiVersion             Int
  ShrtlnksCreatedWithApplication Int?
  ShrtlnksTotalViews             Int?
  Status                         String
  UnsafeURLSubmissions           Int?
  Website                        String?
  user                           DeveloperAccounts @relation(fields: [DeveloperId], references: [id])
}

model DeveloperAccounts {
  id                  String         @id @map("_id")
  AccountCreationDate DateTime       @db.Date
  FirstName           String
  LastName            String
  Password            String
  Role                String
  Salt                String
  Verified            Boolean
  applications        Applications[]
}
