{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production remix build",
    "dev": "cross-env NODE_ENV=development remix dev",
    "test": "jest",
    "cypress": "CYPRESS_BASE_URL=${BASE_URL:=http://localhost:3000} cypress ${TEST_COMMAND:=open} --browser chrome",
    "postinstall": "remix setup node",
    "db:seed": "node --require esbuild-register prisma/seed.ts",
    "db:drop": "node --require esbuild-register prisma/drop.ts",
    "db:migrate": "prisma db push",
    "db:prod-refresh": "npm run db:drop && node --require esbuild-register prisma/consolidate-production.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "@remix-run/react": "^1.2.2",
    "@remix-run/vercel": "^1.2.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.6.0",
    "pbkdf2-hmac": "^1.0.4",
    "prisma": "^3.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recharts": "^2.1.9",
    "remix": "^1.2.2",
    "short-unique-id": "^4.4.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "@testing-library/cypress": "^8.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^27.4.1",
    "@types/progress": "^2.0.5",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.1",
    "esbuild-register": "^3.3.2",
    "jest": "^27.5.1",
    "jest-runner-tsc": "^1.6.0",
    "progress": "^2.0.3",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
