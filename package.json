{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production remix build",
    "dev": "cross-env NODE_ENV=development remix dev",
    "lint": "eslint --ext ts --ext tsx app cypress/integration",
    "test": "jest",
    "cypress": "TZ=America/New_York CYPRESS_BASE_URL=${BASE_URL:=http://localhost:3000} cypress ${TEST_COMMAND:=open} --browser chrome",
    "db:seed": "node --require esbuild-register prisma/seed.ts",
    "db:drop": "node --require esbuild-register prisma/drop.ts",
    "db:migrate": "prisma db push",
    "db:prod-refresh": "npm run db:drop && node --require esbuild-register prisma/consolidate-production.ts",
    "clean-urls": "node --require esbuild-register scripts/check-links.ts"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11.9.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@prisma/client": "^3.10.0",
    "@remix-run/node": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "@remix-run/vercel": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "framer-motion": "^6.2.10",
    "joi": "^17.6.0",
    "luxon": "^2.4.0",
    "pbkdf2-hmac": "^1.0.4",
    "prisma": "^3.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.5.0",
    "recharts": "^2.1.9",
    "short-unique-id": "^4.4.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@formdata-helper/remix": "^1.1.0",
    "@remix-run/dev": "^1.3.3",
    "@remix-run/serve": "^1.3.3",
    "@testing-library/cypress": "^8.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^27.4.1",
    "@types/luxon": "^2.3.2",
    "@types/progress": "^2.0.5",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.4",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.5.1",
    "jest-runner-tsc": "^1.6.0",
    "progress": "^2.0.3",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
